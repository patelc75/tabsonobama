<div class="box">
<div class="boxcontent">
<h1>Send an invitation</h1>

<% form_for(@invitation) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :recipient_email, "Your friend's email address" %>
    <%= f.text_field :recipient_email %>
  </p>
  <p>
    <%= f.submit "Invite!" %>
    or
    <%= link_to 'cancel', :controller => "home", :action => "index" %>
  </p>
<% end %>
</div>
</div>