<% if current_user %>
  you are logged in as
  <%= current_user.login %>
  <%= link_to "Logout", logout_url %>
<% else %>
  <div id="login-links">
  	<li><%= link_to "Signup", signup_url, :title => "Signup" %></li>
  	<li><a title="Login" href="/login" id="login-link">Login</a></li>
  </div>
  <div id="login-form" style="display:none">
    <% form_remote_tag :url => session_url,:update => "user" do %>
      <input type="text" name="login" value="login" id="login" size="12" />
      <input type="password" name="password" value="password" id="password" size="12" />
      <input type="submit" name="submit" value="Login" id="submit" />
      <input type="button" name="cancel" value="cancel" id="cancel-button">
    <% end %>
  </div>
  <% if flash[:error] %>
    <%= javascript_tag "alert('Couldn\\'t log you in as \\'#{@login}\\'');" %>
  <% end %>
<% end %>