
<div class="box">
 	<div class="boxcontent">
 	    <h2>Rate</h2>
 	    
 		<div class="featured">
 			<h3><%= link_to "Cabinet Members", "/cabinet-members", { :title => "Show All Cabinet Members"} %></h3>
			
			<div id="star-ratings-block-<%= Aggregate.class_name %>-<%= CabinetMember.class_name %>" class="star-ratings-block">
				<%= render :partial => 'ratings/rate', :locals => {:asset => Aggregate.find(:first, :conditions => ['rateable_type = ?', CabinetMember.class_name])} %>
			</div>
			
 			<br class="clear" />
 		</div>
 		
 		<div class="featured more">
 			<div class="meta">
	 			<h3>Featured Cabinet Member</h3>
 				
 				<%
 					# Pass the real value in to the partial later...
 					featured = CabinetMember.find(:first, :conditions => ["nominee = 'Hillary Rodham Clinton'"])
 				%>
 				<div id="star-ratings-block-<%= featured.class.to_s %>-<%= featured.id %>" class="star-ratings-block">
					<%= render :partial => 'ratings/rate', :locals => {:asset => featured, :align => 'left'} %>
				</div>
	 		</div>
	 		<div class="photo">
	 			<img alt="Hilary Clinton" src="../images/hilary.jpg" />
	 		</div>
 			<br class="clear" />
 		</div>
 		
 		<br class="clear" />
 	</div>
</div>