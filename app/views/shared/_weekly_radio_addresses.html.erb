
<div class="box">
 	<div class="boxcontent">
 	    <h2>Rate</h2>
 		<div class="featured">
		<h3><%= link_to "Weekly Radio Addresses", "/weekly-radio-addresses", { :title => "Show All Weekly Radio Addresses"} %></h3>
			<div id="star-ratings-block-<%= Aggregate.class_name %>-<%= WeeklyRadioAddress.class_name %>" class="star-ratings-block">
				<%= render :partial => 'ratings/rate', :locals => {:asset => Aggregate.find(:first, :conditions => ['rateable_type = ?', WeeklyRadioAddress.class_name])} %>
			</div>
 				
 			<br class="clear" />
 		</div>
 		
 		<div class="featured more">
 			<div class="meta">
	 			<h3>Featured Radio Address</h3>
 				
 				<%
 					# Pass the real value in to the partial later...
 					featured = WeeklyRadioAddress.find(:first)
 				%>
 				<div id="star-ratings-block-<%= featured.class.to_s %>-<%= featured.id %>" class="star-ratings-block">
					<%= render :partial => 'ratings/rate', :locals => {:asset => featured, :align => 'left'} %>
				</div> 	
	 		</div>
	 		<div class="photo">
	 			<img alt="Radio Address" src="../images/radio.jpg" />
	 		</div>
 			<br class="clear" />
 		</div>
 		<br class="clear" />
 	</div>
</div>