
<div class="box">
 	<div class="boxcontent">
 	<h2>Rate</h2>
 		<h3><%= link_to "Campaign Promises", "/campaign-promises" , { :title => "Show All Campaign Promises"} %></h3> 	
 		
 		<ul class="issues">
 			<% IssueGroup.find(:all).each do |issue_group| %>
				<li>
					<h3><%= link_to issue_group.name, "/campaign-promises/#{issue_group.permalink}" %></h3>
					<div id="star-ratings-block-<%=issue_group.class.to_s%>-<%= issue_group.id %>" class="star-ratings-block">
		 				<%= render :partial => 'ratings/rate', :locals => {:asset => issue_group} %>
		 			</div>
				</li>
			<% end %>
 		</ul>
 		
 		<!-- featured campaign promises -->
 		<div class="moreissues">
 			<%
				# Pass the real values in later...
				features = []
				features << IssueGroup.find(:first, :conditions => ["name = 'Economy'"])
				features << IssueGroup.find(:first, :conditions => ["name = 'Immigration'"])
				features << IssueGroup.find(:first, :conditions => ["name = 'Civil Rights'"])
			%>
 			<h3>Featured Campaign Promises</h3>
 			<ul id="featured">
 				<li>
 					Economy
 					<ul class="issue">
 						<li>
 							Provide a Tax Cut for Working Families
 							<blockquote>
 								<p>&quot;Obama and Biden will restore  fairness to the tax code and provide 150 million workers the tax relief they need...&quot; <a href="#">continued...</a></p>
 							</blockquote>
			 				<div id="star-ratings-block-<%= features[0].class.to_s %>-<%= features[0].id %>" class="star-ratings-block">
				 				<%= render :partial => 'ratings/rate', :locals => {:asset => features[0]} %>
				 			</div>
				 			<br class="clear" />
 						</li>
 					</ul>
 				</li>
 				<li>
 					Immigration
 					<ul class="issue">
 						<li>
 							Create Secure Borders
	 						<blockquote>
 								<p>&quot;Obama and Biden want to preserve the integrity of our borders...&quot; <a href="#">continued...</a></p>
 							</blockquote>			 				
			 				<div id="star-ratings-block-<%= features[1].class.to_s %>-<%= features[1].id %>" class="star-ratings-block">
				 				<%= render :partial => 'ratings/rate', :locals => {:asset => features[1]} %>
				 			</div>
				 			<br class="clear" />
							</li>
 					</ul>
 				</li>
 				<li>
 					Civil Rights
 					<ul class="issue">
 						<li>
 							End Racial Profiling
		 					<blockquote>
 								<p>&quot;Obama and Biden will enact federal law to stem racial profiling...&quot; <a href="#">continued...</a></p>
 							</blockquote>			 				
			 				<div id="star-ratings-block-<%= features[2].class.to_s %>-<%= features[2].id %>" class="star-ratings-block">
				 				<%= render :partial => 'ratings/rate', :locals => {:asset => features[2]} %>
				 			</div>
				 			<br class="clear" />
 						</li>
 					</ul>
 				</li>
 			</ul>
 		</div>
 		
 		<br class="clear" />
 	</div>
</div>