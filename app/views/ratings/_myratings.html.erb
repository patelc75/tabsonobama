<% if !@logged_in %>
  <script language="javascript">
    tb_show('Dialog', '#TB_inline?height=325&width=400&inlineId=userLogin&modal=true', null);
  </script>
<% end %>

<div class="box">
  <div class="boxcontent">
    <h2>Rated Cabinet Members</h2>
    
    <% unless @members.empty? %>
    
      <% @members.uniq.each do |member| %>
      <div class="featured more">
        <div class="meta">
          <h3><%= member.nominee %></h3>
          <%= render :partial => 'ratings/user_rate', :locals => {:asset => member, :rater => current_user} %>
        </div>
        <div class="photo">
          <img alt="<%= member.nominee %>" src="<%= member.image_link %>" />
        </div>
        <br class="clear" />
      </div>
      <% end %>
    
    <% else %>
      You have not rated any Cabinet Members
    <% end %>
    
    <br class="clear" />
  </div>
</div>


