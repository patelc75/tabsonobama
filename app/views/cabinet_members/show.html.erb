<%= stylesheet_link_tag "cabinet" %>

<!-- cabinet -->
<div class="box">
  <div class="boxcontent">
  	
  <h1>Senior Staff</h1>
  <h4><%= link_to "Show other Senior Staff", "/cabinet-members", { :title => "Show All Cabinet Members"} %></h4>
  <hr />
  <div id="cabinetlist">
    <ul class="mainlist">
      <li class="mainlist single">
        <div class="phototitlerate">
          <div class="cabinetphoto">
            <img alt="<%= @cabinet_member.nominee %>" src="<%= @cabinet_member.image_link %>" width="75px"/>
            <h5>
              <a href="<%= @cabinet_member.wikipedia_link %>"><%= @cabinet_member.nominee %></a>
            </h5>
          </div>
          <div class="titlerate single">
            <h3><% if !@cabinet_member.office.blank? %><%= @cabinet_member.office %> of <% end %>
            <%= @cabinet_member.department %></h3>
            <br/>
            <h4>Formerly: <%= link_to @cabinet_member.previous_political_office, @cabinet_member.previous_political_office_link %>
            </h4>
            <br>
            <div id="star-ratings-block-<%=@cabinet_member.class.to_s%>-<%= @cabinet_member.id %>" class="star-ratings-block">
              <%= render :partial => 'ratings/rate', :locals => {:asset => @cabinet_member, :align => 'left'} %>
            </div>
          </div>
        </div>
        <br class="clear"/>
        <br class="clear" />
      </li>
    </ul>
  </div>
  <br>
  <br class="clear" />
  <br class="clear"/>
  
  <%= render :partial => "intense_debate/comments", :locals => {:model => @cabinet_member} %>
  </div>
</div>