<%= stylesheet_link_tag "cabinet" %>

<% if @cabinet_members.empty? %>
  <p>No cabinet members.</p>
<% else %>
  <!-- cabinet -->
  <div class="box">
  	<div class="boxcontent">
	   	<h1>Staff & Appointments</h1>
	   	<hr />
	
	    <div id="cabinetlist">
	      <ul class="mainlist">
	        <% @cabinet_members.each do |c| %>
	          <li class="mainlist">				
	          <div class="phototitlerate">
	          	<div class="cabinetphoto">						
	          		<img alt="<%=c.nominee%>" src="<%= !c.image_link.blank? ? c.image_link : "images/#{c.photo_filename}" %>" width="75px" />
	          		<h5><%= link_to c.nominee, "cabinet-members/#{c.permalink}" %><h5>
	          	</div>
	          	<div class="titlerate">
	          	</div>
	          	<h3><%= link_to c.department, "cabinet-members/#{c.permalink}" %></h3>
	          	
	          	<h4><% if !c.office.blank? %><%= link_to c.office, "cabinet-members/#{c.permalink}" %><% end %></h4>
	          	<div id="star-ratings-block-<%= c.class.to_s %>-<%= c.id %>" class="star-ratings-block">
	          		<%= render :partial => 'ratings/rate', :locals => {:asset => c, :align => "left"} %>
	          	</div>
	          	<% promote_div_id = "promote-#{c.class}-#{c.id}" %>
	          	<div id="<%= promote_div_id %>">
	            	<%= render :partial => "/promotions/promote", :locals => {:item => c, :update_div => promote_div_id} %>
	          	</div>
	          	</div>

	          <br class="clear" />
	          <br class="clear"/>
	          </li>
	        <% end %>
	      </ul>
	    </div> <!-- /cabinetlist -->
	    <br class="clear" />
	    <br class="clear"/>
    </div>
  </div> <!-- /box -->
<% end %>