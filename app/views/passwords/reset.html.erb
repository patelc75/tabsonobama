<%= stylesheet_link_tag "signup" %>
<div class="box">
<div class="boxcontent">
<%= title "Reset Your Password", :h1 %>
<% form_for :user, :url => { :action => 'update_after_forgetting' } do |f| %>
  <%= f.error_messages %>
  <p>Please enter a new password and confirm it.</p>
    <table>
      <tr><td>Enter Password</td> 			 	<td><%= f.password_field :password %></td></tr>
      <tr><td>Re-enter Password</td> 			<td><%= f.password_field :password_confirmation %></td></tr>
	</table>
  
	<%= hidden_field_tag :reset_code, params[:reset_code] %>
    <%= submit_tag 'Reset', :class => 'button' %>
<% end %>
</div>
</div>
