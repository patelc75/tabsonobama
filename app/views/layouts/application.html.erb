				<h1><%= link_to "Home", { :controller => "home", :action => "index" } , { :title => "Home"} %></h1>
			</div>
	    
	    	<div id="nav">
	    		<ul>
					<li class="home"><%= link_to "Home", { :controller => "home", :action => "index" } , { :title => "Home"} %></li>
					<li><%= link_to "About", "/about" , { :title => "About"} %></li>
						
			<li><%= link_to "My Ratings", { :controller => "ratings", :action => "index" } , { :title => "My Ratings"} %>
			<% if false %>
			<li><%= link_to "Blog", "http://blog.tabsonrahm.org" %>
  		<% end %>	
					<!--li><a title="Blog" href="#">Blog</a></li-->
