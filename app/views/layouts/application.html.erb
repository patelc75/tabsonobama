<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	
	<head>
	    <title>Keeping Tabs on Obama</title>
	    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	    <%= stylesheet_link_tag 'application' %>
	    
	    <!--[if lt IE 7]>
	        <%= stylesheet_link_tag 'ie' %>
		<![endif]-->
		
		<%= javascript_include_tag :defaults %>
		<script type="text/javascript" src="/javascripts/thickbox.js"></script>
		<script type="text/javascript" src="/javascripts/login.js"></script>
		<script type="text/javascript" src="http://api.recaptcha.net/js/recaptcha_ajax.js"></script> 
    	<%= stylesheet_link_tag "login" %>
		<%= stylesheet_link_tag "signup" %>
		<%= stylesheet_link_tag "rating" %>
		<%= stylesheet_link_tag "thickbox" %>
		<script type="text/javascript">
		  $(document).ready(function() {
		    setupNotice();
		  });
		</script>
	</head>

	<body>
<div id="dialogID" style="display:none">
  <p>One vote per 24 hour period only.</p>
  <p style="text-align:center"><input type="submit" id="Login" value="&nbsp;&nbsp;Ok&nbsp;&nbsp;" onclick="tb_remove()" /></p>
</div>

<div id="pop_login">
<%=render :partial => "/users/pop_login_form" %>
</div>

<% # only show signup button for signup popup if not signup url %>
<% unless (controller.controller_name == "users" && controller.action_name == "new") %>
<div id="pop_signup">
<%=render :partial => "/users/pop_signup_form" %>
</div>
<% end %>

<div id="pop_forgot_password">
<%=render :partial => "/passwords/pop_forgot_form" %>
</div>


		<div id="spine"></div>

		<div id="wrapper">
		
			<div id="header">
				<h1><a href="#">Tabs on Obama</a></h1>
			</div>
	    
	    	<div id="nav">
	    		<ul>
					<li class="home"><%= link_to "Home", { :controller => "home", :action => "index" } , { :title => "Home"} %></li>
					<li><%= link_to "About", { :controller => "home", :action => "about" } , { :title => "About"} %></l>
					<li><%= link_to "My Ratings", { :controller => "ratings", :action => "index" } , { :title => "My Ratings"} %></l>
					<!--li><a title="Blog" href="#">Blog</a></li-->
					<!--li><a title="Press" href="#">Press</a></li-->
		        </ul>
		        
		        <ul id="user">
		          <%= render :partial => "/users/nav_login_form" %>
		        </ul>
	    	</div>
	    	
			<div id="content">
			  <% if flash[:notice] %>
      	   <div id="notice">
      	     <%= flash[:notice] %>
             <a id="close-notice" href='#'>X</a>
      	   </div>
    	   <% end %>
 			  
				<%= yield %>
			</div>

			<div id="footer">
				<span id="disclaimer">A Citizen-Run Community</span>
			</div>

	   </div>

	   <script src="http://tabsonobama.uservoice.com/pages/general/widgets/tab.js?alignment=right&amp;color=3a6694" type="text/javascript"></script>
	   
	   <script type="text/javascript">
			var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
			document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
	   </script>
	   <script type="text/javascript">
			try {
			var pageTracker = _gat._getTracker("UA-6693148-1");
			pageTracker._trackPageview();
			} catch(err) {}
	   </script>
	</body>
</html>