		<%= stylesheet_link_tag 'splash' %>
		<%= javascript_include_tag :defaults %>
		<script type="text/javascript">
		  $(document).ready(function() {
		    $("#close-notice").click(function () {
		      $("#notice").fadeOut("slow");
		    });
		  });
		</script>
	</head>

	<body>
	   <% if flash[:notice] %>
  	   <div id="notice">
  	     <%= flash[:notice] %>
  	   </div>
	   <% end %>
	   <div id="notice">
	     Thanks for signing up! We're sending you an email right now.
	     <a id="close-notice" href='#'>X</a>
	   </div>
	   <div id="wrapper">
	         <div id="content">
	         	<fieldset>
			        <br>			
      				<%= yield %>
	         	</fieldset>
			 </div>
			 <!--Tabs on Obama 2008-->
	   </div>
